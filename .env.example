# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=transi-store
DB_USER=transi-store
DB_PASSWORD=transi-store
DB_ROOT_PASSWORD=rootpassword

# Connection string for Drizzle
DATABASE_URL=mysql://transi-store:transi-store@localhost:3306/transi-store

# OAuth2 - JWT-based authentication
# Note: access_token must be a JWT with "sub" claim containing user ID
OAUTH_AUTHORIZATION_URL=https://your-oauth-server.com/oauth/authorize
OAUTH_TOKEN_URL=https://your-oauth-server.com/oauth/token
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback
OAUTH_SCOPES=

# Session
SESSION_SECRET=your-session-secret-change-this-in-production
